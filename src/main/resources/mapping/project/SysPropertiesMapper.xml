<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.springbootv1.project.dao.ISysPropertiesDao">
    <resultMap id="SysProperties" type="com.system.springbootv1.project.model.SysProperties">
        <id column="Id" jdbcType="VARCHAR" property="id"/>
        <result column="Alias" jdbcType="VARCHAR" property="alias"/>
        <result column="Creator" jdbcType="VARCHAR" property="creator"/>
        <result column="Description" jdbcType="VARCHAR" property="description"/>
        <result column="Group" jdbcType="VARCHAR" property="group"/>
        <result column="Modifier" jdbcType="VARCHAR" property="modifier"/>
        <result column="Name" jdbcType="VARCHAR" property="name"/>
        <result column="Value" jdbcType="VARCHAR" property="value"/>
        <result column="CreateTime" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="ModifyTime" jdbcType="TIMESTAMP" property="modifyTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        `Id`,`Alias`,`Creator`,`Description`,`Group`,`Modifier`,`Name`,`Value`, `CreateTime`, `ModifyTime`
    </sql>

    <insert id="insert" parameterType="com.system.springbootv1.project.model.SysProperties">
        insert into `sys_properties` (<include refid="Base_Column_List"/>)
        values (
        #{Id,jdbcType=VARCHAR},
        #{alias,jdbcType=VARCHAR},
        #{creator,jdbcType=VARCHAR},
        #{description,jdbcType=VARCHAR},
        #{group,jdbcType=VARCHAR},
        #{modifier,jdbcType=VARCHAR},
        #{name,jdbcType=VARCHAR},
        #{value,jdbcType=VARCHAR},
        #{createTime,jdbcType=TIMESTAMP},
        #{modifyTime,jdbcType=TIMESTAMP}
        )
    </insert>

    <update id="update" parameterType="com.system.springbootv1.project.model.SysProperties">
        update `sys_properties`
        <set>
            <if test="alias!= null">
                `Alias`=#{alias,jdbcType=VARCHAR},
            </if>
            <if test="creator!= null">
                `Creator`=#{creator,jdbcType=VARCHAR},
            </if>
            <if test="description!= null">
                `Description`=#{description,jdbcType=VARCHAR},
            </if>
            <if test="group!= null">
                `Group`=#{group,jdbcType=VARCHAR},
            </if>
            <if test="modifier!= null">
                `Modifier`=#{modifier,jdbcType=VARCHAR},
            </if>
            <if test="name!= null">
                `Name`=#{name,jdbcType=VARCHAR},
            </if>
            <if test="value!= null">
                `Value`=#{value,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                `CreateTime` = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="modifyTime != null">
                `ModifyTime` = #{modifyTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where `Id` = #{id,jdbcType=VARCHAR}
    </update>

    <delete id="deleteByIds" parameterType="java.util.List">
        delete from `sys_properties`
        where `Id` in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="getById" parameterType="java.lang.String" resultMap="SysProperties">
        select
        <include refid="Base_Column_List"/>
        from `sys_properties`
        where `Id` = #{id,jdbcType=VARCHAR}
    </select>

    <select id="list" parameterType="java.util.Map" resultMap="SysProperties">
        select
        <include refid="Base_Column_List"/>
        from `sys_properties`
        where 1=1
        <if test="search != null">

        </if>
        <if test="sort != null">
            order by ${sort}
        </if>
        <if test="sort == null">
            order by `CreateTime` desc
        </if>
    </select>

    <select id="selectList" parameterType="com.system.springbootv1.project.model.SysProperties"
            resultMap="SysProperties">
        select
        <include refid="Base_Column_List"/>
        from `sys_properties`
        where 1=1
        <if test="beginTime != null and beginTime != ''"><!-- 开始时间检索 -->
            AND date_format(`CreateTime`,'%y%m%d') &gt;= date_format(#{beginTime},'%y%m%d')
        </if>
        <if test="endTime != null and endTime != ''"><!-- 结束时间检索 -->
            AND date_format(`Create_time`,'%y%m%d') &lt;= date_format(#{endTime},'%y%m%d')
        </if>
    </select>

    <select id="getByGroup" parameterType="java.lang.String" resultMap="SysProperties">
        select  <include refid="Base_Column_List"/>
        from `sys_properties`
        where `Group` = #{group}
    </select>

    <select id="getValueByAlias" parameterType="java.lang.String" resultType="java.lang.String">
        select `Value`
        from `sys_properties`
        where `Alias` = #{alias}
    </select>
</mapper>